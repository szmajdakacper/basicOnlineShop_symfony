{% extends 'products/base_products.html.twig' %}

{% block body_products %}
<div class="container">
    <ul class="list-group">
    {% for product_batched in products|batch(3) %}
        <div class="row">
        {% for product in product_batched %}
            <div class="col-4 mt-3">
                <a href="/products/{{ product.id }}">
                    <div class="card h-100" style="width: 18rem;">
                        <img class="card-img-top" src="{{ asset('uploads/thumbnails/' ~ product.img) }}" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">{{ product.name }}</h5>
                            <p class="card-text">{{ product.description|slice(0,9) }}...</p>
                        </div>
                        <div class="footer">
                            <p class="lead text-center">{{ product.prise }} USD</p>
                        </div>
                    </div>
                </a>
            </div>
        {% endfor %}
        </div>
    {% endfor %}
    </ul>
</div>
{% endblock %}