{% set cart = app.session.get('cart') %}
{% if(cart != null) %}
    <ul class="list-group mt-3 mr-3">
        <li class="list-group-item list-group-item-light d-flex justify-content-between align-items-center text-primary">
            Shopping Cart
            <span class="badge badge-primary badge-pill">{{ cart|length }}</span>
        </li>
    </ul>
{% else %}
    <ul class="list-group mt-3 mr-3">
        <li class="list-group-item list-group-item-light d-flex justify-content-between align-items-center text-primary">
            Your Shopping Cart Is Empty
            <span class="badge badge-primary badge-pill">0</span>
        </li>
    </ul>
{% endif %}